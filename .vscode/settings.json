{
    "conventionalCommits.scopes": [
        "readme.md",
        "frontend+backend",
        ".vscode/settings.json",
        ".vscode/tasks.json",
        "hydration",
        "home",
        ".common_links",
        "experiments/maze",
        "experiments/dragndrop",
        "articles",
        "articles/photography",
        "articles/most_useful_functional_pattern_python",
        "articles/about_site",
        "articles/concept_of_more_useful_types",
        "articles/multilayer_cache",
        "articles/event_processing",
        "articles/io_bound_parallel_processing_in_python",
        "articles/vscode_extensions_and_settings_regardless_of_the_programming_language",
        "articles/a_poem_about_absolute_uncertainty",
        "articles/white_roses_spread_on_the_ground",
        "caching",
        "repository"
    ],
    "rust-analyzer.cargo.features": [
        "ssr"
    ],
    "terminal.integrated.cwd": "./misc",
    "markdown.validate.enabled": true,
    "markdownlint.run": "onSave",
    "markdown.validate.ignoredLinks": [
        "/static/articles/photography/images/*",
